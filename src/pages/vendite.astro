---
import Layout from '../layouts/Layout.astro';
import { supabase } from '../lib/supabase';
import { ShoppingCart, Euro, Package } from 'lucide-astro';

const { data: vendite } = await supabase.from('vendite').select('*').order('data', { ascending: false });
const venditeData = vendite || [];

const formatEuro = (n: number) => n.toFixed(2).replace('.', ',') + '€';

const totaleRicavi = venditeData.reduce((acc, v) => acc + v.totale, 0);
const totaleArticoli = venditeData.reduce((acc, v) => acc + v.quantita, 0);

const getCategoriaColor = (cat: string) => {
  switch (cat) {
    case 'Patch': return 'bg-blue-100 text-blue-700';
    case 'Maglia': return 'bg-amber-100 text-amber-700';
    case 'Tuta': return 'bg-purple-100 text-purple-700';
    default: return 'bg-gray-100 text-gray-700';
  }
};

const getPiattaformaColor = (p: string) => {
  switch (p) {
    case 'Vinted': return 'bg-teal-100 text-teal-700';
    case 'Ebay': return 'bg-yellow-100 text-yellow-700';
    default: return 'bg-gray-100 text-gray-700';
  }
};
---

<Layout title="Vendite">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold text-slate-800 flex items-center gap-2">
      <ShoppingCart class="w-6 h-6 text-green-600" />
      Registro Vendite
    </h1>
    <div class="flex gap-3 text-sm">
      <div class="bg-blue-50 text-blue-700 px-3 py-1.5 rounded-lg flex items-center gap-2">
        <Package class="w-4 h-4" />
        <span class="font-semibold">{totaleArticoli}</span>
      </div>
      <div class="bg-green-50 text-green-700 px-3 py-1.5 rounded-lg flex items-center gap-2">
        <Euro class="w-4 h-4" />
        <span class="font-semibold">{formatEuro(totaleRicavi)}</span>
      </div>
    </div>
  </div>

  <div class="bg-white rounded-xl shadow-sm overflow-hidden">
    <table class="w-full">
      <thead class="bg-slate-50 border-b border-slate-200">
        <tr class="text-left text-xs font-medium text-slate-500 uppercase tracking-wider">
          <th class="px-4 py-3">Data</th>
          <th class="px-4 py-3">Categoria</th>
          <th class="px-4 py-3">Prodotto</th>
          <th class="px-4 py-3 text-center">Qtà</th>
          <th class="px-4 py-3 text-right">Totale</th>
          <th class="px-4 py-3 text-center">Piattaforma</th>
          <th class="px-4 py-3">Cliente</th>
        </tr>
      </thead>
      <tbody class="divide-y divide-slate-100">
        {venditeData.map((v) => (
          <tr class="hover:bg-slate-50 transition-colors">
            <td class="px-4 py-3 text-slate-600 text-sm">{v.data}</td>
            <td class="px-4 py-3">
              <span class={`px-2 py-1 rounded text-xs font-medium ${getCategoriaColor(v.categoria)}`}>
                {v.categoria}
              </span>
            </td>
            <td class="px-4 py-3 font-medium text-slate-800">{v.prodotto}</td>
            <td class="px-4 py-3 text-center text-slate-600">{v.quantita}</td>
            <td class="px-4 py-3 text-right font-semibold text-green-600">{formatEuro(v.totale)}</td>
            <td class="px-4 py-3 text-center">
              <span class={`px-2 py-1 rounded-full text-xs font-medium ${getPiattaformaColor(v.piattaforma)}`}>
                {v.piattaforma}
              </span>
            </td>
            <td class="px-4 py-3 text-slate-600 text-sm">
              {v.cliente ? (
                <span class={v.cliente === 'Sospeso' ? 'text-orange-600 font-medium' : ''}>
                  {v.cliente}
                </span>
              ) : '-'}
            </td>
          </tr>
        ))}
      </tbody>
      <tfoot class="bg-slate-50 border-t-2 border-slate-200">
        <tr class="font-semibold text-slate-700">
          <td class="px-4 py-3" colspan="3">Totale ({venditeData.length} vendite)</td>
          <td class="px-4 py-3 text-center">{totaleArticoli}</td>
          <td class="px-4 py-3 text-right text-green-600">{formatEuro(totaleRicavi)}</td>
          <td class="px-4 py-3" colspan="2"></td>
        </tr>
      </tfoot>
    </table>
  </div>
</Layout>
