---
import Layout from '../layouts/Layout.astro';
import { supabase } from '../lib/supabase';
import { TrendingUp, Package, Euro, Tags, Shirt, Award } from 'lucide-astro';

// Fetch dati da Supabase
const { data: patch } = await supabase.from('patch').select('*');
const { data: tute } = await supabase.from('tute').select('*');
const { data: maglie } = await supabase.from('maglie').select('*');
const { data: vendite } = await supabase.from('vendite').select('*').order('data', { ascending: false });

// Calcola statistiche patch
const patchData = patch || [];
const tuteData = tute || [];
const maglieData = maglie || [];
const venditeData = vendite || [];

const totaleArticoliPatch = patchData.reduce((acc, p) => acc + p.in_magazzino, 0);
const totaleVendutiPatch = patchData.reduce((acc, p) => acc + p.venduti, 0);
const valoreInventarioPatch = patchData.reduce((acc, p) => acc + (p.in_magazzino * p.costo_unitario), 0);
const ricavoTotalePatch = patchData.reduce((acc, p) => acc + p.ricavo_vendite, 0);
const profittoPatch = patchData.reduce((acc, p) => acc + p.profitto, 0);

// Calcola statistiche tute
const tuteInMagazzino = tuteData.filter(t => t.stato === 'In magazzino').length;
const tuteVendute = tuteData.filter(t => t.stato === 'Venduto').length;
const valoreInventarioTute = tuteData.filter(t => t.stato === 'In magazzino').reduce((acc, t) => acc + t.costo, 0);
const ricavoTotaleTute = tuteData.filter(t => t.stato === 'Venduto').reduce((acc, t) => acc + t.prezzo_vendita, 0);
const profittoTute = tuteData.reduce((acc, t) => acc + t.profitto, 0);

// Calcola statistiche maglie
const maglieInMagazzino = maglieData.filter(m => m.stato === 'In magazzino').length;
const maglieVendute = maglieData.filter(m => m.stato === 'Venduta').length;
const maglieDaFare = maglieData.filter(m => m.stato === 'Da fare').length;
const valoreInventarioMaglie = maglieData.filter(m => m.stato !== 'Venduta').reduce((acc, m) => acc + m.costo_totale, 0);

// Calcola totali vendite
const totaleRicavi = venditeData.reduce((acc, v) => acc + v.totale, 0);
const totaleArticoliVenduti = venditeData.reduce((acc, v) => acc + v.quantita, 0);

// Formattazione euro
const formatEuro = (n: number) => n.toFixed(2).replace('.', ',') + ' EUR';
---

<Layout title="Dashboard">
  <h1 class="text-3xl font-bold text-slate-800 mb-8">Dashboard Magazzino</h1>

  <!-- Stats generali -->
  <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
    <div class="bg-white rounded-xl shadow-md p-6">
      <div class="flex items-center justify-between mb-2">
        <div class="text-sm text-gray-500 uppercase tracking-wide">Ricavi Totali</div>
        <div class="p-2 bg-green-100 rounded-lg">
          <Euro class="w-5 h-5 text-green-600" />
        </div>
      </div>
      <div class="text-3xl font-bold text-green-600">{formatEuro(totaleRicavi)}</div>
    </div>
    <div class="bg-white rounded-xl shadow-md p-6">
      <div class="flex items-center justify-between mb-2">
        <div class="text-sm text-gray-500 uppercase tracking-wide">Articoli Venduti</div>
        <div class="p-2 bg-blue-100 rounded-lg">
          <Package class="w-5 h-5 text-blue-600" />
        </div>
      </div>
      <div class="text-3xl font-bold text-blue-600">{totaleArticoliVenduti}</div>
    </div>
    <div class="bg-white rounded-xl shadow-md p-6">
      <div class="flex items-center justify-between mb-2">
        <div class="text-sm text-gray-500 uppercase tracking-wide">Profitto Patch</div>
        <div class="p-2 bg-emerald-100 rounded-lg">
          <TrendingUp class="w-5 h-5 text-emerald-600" />
        </div>
      </div>
      <div class="text-3xl font-bold text-emerald-600">{formatEuro(profittoPatch)}</div>
    </div>
    <div class="bg-white rounded-xl shadow-md p-6">
      <div class="flex items-center justify-between mb-2">
        <div class="text-sm text-gray-500 uppercase tracking-wide">Profitto Tute</div>
        <div class="p-2 bg-emerald-100 rounded-lg">
          <TrendingUp class="w-5 h-5 text-emerald-600" />
        </div>
      </div>
      <div class="text-3xl font-bold text-emerald-600">{formatEuro(profittoTute)}</div>
    </div>
  </div>

  <!-- Sezioni per categoria -->
  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6 mb-8">
    <!-- Patch -->
    <div class="bg-white rounded-xl shadow-md p-6">
      <h2 class="text-xl font-semibold text-slate-700 mb-4 flex items-center gap-2">
        <div class="p-2 bg-blue-100 rounded-lg">
          <Tags class="w-5 h-5 text-blue-600" />
        </div>
        Patch
      </h2>
      <div class="space-y-3">
        <div class="flex justify-between">
          <span class="text-gray-600">In Magazzino</span>
          <span class="font-semibold">{totaleArticoliPatch}</span>
        </div>
        <div class="flex justify-between">
          <span class="text-gray-600">Venduti</span>
          <span class="font-semibold">{totaleVendutiPatch}</span>
        </div>
        <div class="flex justify-between">
          <span class="text-gray-600">Valore Inventario</span>
          <span class="font-semibold">{formatEuro(valoreInventarioPatch)}</span>
        </div>
        <div class="flex justify-between">
          <span class="text-gray-600">Ricavo Vendite</span>
          <span class="font-semibold text-green-600">{formatEuro(ricavoTotalePatch)}</span>
        </div>
        <hr class="my-2" />
        <div class="flex justify-between">
          <span class="text-gray-700 font-medium">Profitto</span>
          <span class="font-bold text-green-600">{formatEuro(profittoPatch)}</span>
        </div>
      </div>
      <a href="/patch" class="mt-4 block text-center text-blue-600 hover:text-blue-800 text-sm font-medium">
        Vedi dettagli →
      </a>
    </div>

    <!-- Tute -->
    <div class="bg-white rounded-xl shadow-md p-6">
      <h2 class="text-xl font-semibold text-slate-700 mb-4 flex items-center gap-2">
        <div class="p-2 bg-purple-100 rounded-lg">
          <Award class="w-5 h-5 text-purple-600" />
        </div>
        Tute
      </h2>
      <div class="space-y-3">
        <div class="flex justify-between">
          <span class="text-gray-600">In Magazzino</span>
          <span class="font-semibold">{tuteInMagazzino}</span>
        </div>
        <div class="flex justify-between">
          <span class="text-gray-600">Vendute</span>
          <span class="font-semibold">{tuteVendute}</span>
        </div>
        <div class="flex justify-between">
          <span class="text-gray-600">Valore Inventario</span>
          <span class="font-semibold">{formatEuro(valoreInventarioTute)}</span>
        </div>
        <div class="flex justify-between">
          <span class="text-gray-600">Ricavo Vendite</span>
          <span class="font-semibold text-green-600">{formatEuro(ricavoTotaleTute)}</span>
        </div>
        <hr class="my-2" />
        <div class="flex justify-between">
          <span class="text-gray-700 font-medium">Profitto</span>
          <span class="font-bold text-green-600">{formatEuro(profittoTute)}</span>
        </div>
      </div>
      <a href="/tute" class="mt-4 block text-center text-purple-600 hover:text-purple-800 text-sm font-medium">
        Vedi dettagli →
      </a>
    </div>

    <!-- Maglie -->
    <div class="bg-white rounded-xl shadow-md p-6">
      <h2 class="text-xl font-semibold text-slate-700 mb-4 flex items-center gap-2">
        <div class="p-2 bg-amber-100 rounded-lg">
          <Shirt class="w-5 h-5 text-amber-600" />
        </div>
        Maglie
      </h2>
      <div class="space-y-3">
        <div class="flex justify-between">
          <span class="text-gray-600">In Magazzino</span>
          <span class="font-semibold">{maglieInMagazzino}</span>
        </div>
        <div class="flex justify-between">
          <span class="text-gray-600">Vendute</span>
          <span class="font-semibold">{maglieVendute}</span>
        </div>
        <div class="flex justify-between">
          <span class="text-gray-600">Da Fare</span>
          <span class="font-semibold text-orange-600">{maglieDaFare}</span>
        </div>
        <div class="flex justify-between">
          <span class="text-gray-600">Valore Inventario</span>
          <span class="font-semibold">{formatEuro(valoreInventarioMaglie)}</span>
        </div>
      </div>
      <a href="/maglie" class="mt-4 block text-center text-amber-600 hover:text-amber-800 text-sm font-medium">
        Vedi dettagli →
      </a>
    </div>
  </div>

  <!-- Ultime vendite -->
  <div class="bg-white rounded-xl shadow-md p-6">
    <h2 class="text-xl font-semibold text-slate-700 mb-4">Ultime Vendite</h2>
    <div class="overflow-x-auto">
      <table class="w-full text-sm">
        <thead>
          <tr class="border-b text-left text-gray-500">
            <th class="pb-3">Data</th>
            <th class="pb-3">Prodotto</th>
            <th class="pb-3">Qta</th>
            <th class="pb-3">Totale</th>
            <th class="pb-3">Piattaforma</th>
          </tr>
        </thead>
        <tbody>
          {venditeData.slice(0, 5).map((v) => (
            <tr class="border-b last:border-0">
              <td class="py-3">{v.data}</td>
              <td class="py-3">{v.prodotto}</td>
              <td class="py-3">{v.quantita}</td>
              <td class="py-3 font-medium text-green-600">{formatEuro(v.totale)}</td>
              <td class="py-3">
                <span class={`px-2 py-1 rounded text-xs font-medium ${v.piattaforma === 'Vinted' ? 'bg-teal-100 text-teal-800' : 'bg-yellow-100 text-yellow-800'}`}>
                  {v.piattaforma}
                </span>
              </td>
            </tr>
          ))}
        </tbody>
      </table>
    </div>
    <a href="/vendite" class="mt-4 block text-center text-blue-600 hover:text-blue-800 text-sm font-medium">
      Vedi tutte le vendite →
    </a>
  </div>
</Layout>
