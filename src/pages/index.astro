---
import Layout from '../layouts/Layout.astro';
import { supabase } from '../lib/supabase';
import { TrendingUp, Package, Euro, Tags, Shirt, Award, Receipt, CalendarDays } from 'lucide-astro';

// Fetch dati da Supabase
const { data: patch } = await supabase.from('patch').select('*');
const { data: tute } = await supabase.from('tute').select('*');
const { data: maglie } = await supabase.from('maglie').select('*');
const { data: vendite } = await supabase.from('vendite').select('*').order('data', { ascending: false });

// Calcola statistiche patch
const patchData = patch || [];
const tuteData = tute || [];
const maglieData = maglie || [];
const venditeData = vendite || [];

const totaleArticoliPatch = patchData.reduce((acc, p) => acc + (p.quantita_iniziale - p.venduti), 0);
const totaleVendutiPatch = patchData.reduce((acc, p) => acc + p.venduti, 0);
const valoreInventarioPatch = patchData.reduce((acc, p) => acc + ((p.quantita_iniziale - p.venduti) * p.costo_unitario), 0);
const ricavoTotalePatch = patchData.reduce((acc, p) => acc + p.ricavo_vendite, 0);
const profittoPatch = patchData.reduce((acc, p) => acc + p.profitto, 0);

// Calcola statistiche tute
const tuteInMagazzino = tuteData.filter(t => t.stato === 'In magazzino').length;
const tuteVendute = tuteData.filter(t => t.stato === 'Venduto').length;
const valoreInventarioTute = tuteData.filter(t => t.stato === 'In magazzino').reduce((acc, t) => acc + t.costo, 0);
const ricavoTotaleTute = tuteData.filter(t => t.stato === 'Venduto').reduce((acc, t) => acc + t.prezzo_vendita, 0);
const profittoTute = tuteData.reduce((acc, t) => acc + t.profitto, 0);

// Calcola statistiche maglie
const maglieInMagazzino = maglieData.filter(m => m.stato === 'In magazzino').length;
const maglieVendute = maglieData.filter(m => m.stato === 'Venduta').length;
const maglieDaFare = maglieData.filter(m => m.stato === 'Da fare').length;
const valoreInventarioMaglie = maglieData.filter(m => m.stato !== 'Venduta').reduce((acc, m) => acc + m.costo_totale, 0);

// Calcola totali vendite
const totaleArticoliVenduti = venditeData.reduce((acc, v) => acc + v.quantita, 0);

// Ricavi totali = somma ricavi patch + tute vendute + maglie vendute
const ricavoMaglieVendute = maglieData.filter(m => m.stato === 'Venduta').reduce((acc, m) => acc + m.prezzo_vendita, 0);
const totaleRicavi = ricavoTotalePatch + ricavoTotaleTute + ricavoMaglieVendute;

// Spese totali (costi di acquisto)
const spesePatch = patchData.reduce((acc, p) => acc + (p.costo_totale || 0), 0);
const speseTute = tuteData.reduce((acc, t) => acc + (t.costo || 0), 0);
const speseMaglie = maglieData.reduce((acc, m) => acc + (m.costo_totale || 0), 0);
const totaleSpese = spesePatch + speseTute + speseMaglie;

// Profitto totale
const profittoMaglie = maglieData.reduce((acc, m) => acc + (m.profitto || 0), 0);
const totaleProfitto = profittoPatch + profittoTute + profittoMaglie;

// Valore inventario (articoli ancora in magazzino)
const valoreInventarioTotale = valoreInventarioPatch + valoreInventarioTute + valoreInventarioMaglie;

// Formattazione euro
const formatEuro = (n: number) => n.toFixed(2).replace('.', ',') + ' EUR';

// Nomi mesi italiani
const mesiItaliani = ['Gennaio', 'Febbraio', 'Marzo', 'Aprile', 'Maggio', 'Giugno', 'Luglio', 'Agosto', 'Settembre', 'Ottobre', 'Novembre', 'Dicembre'];

// Raggruppa vendite per mese
const venditePerMese = venditeData.reduce((acc, v) => {
  const date = new Date(v.data);
  const key = `${date.getFullYear()}-${String(date.getMonth() + 1).padStart(2, '0')}`;
  if (!acc[key]) {
    acc[key] = { mese: key, anno: date.getFullYear(), meseNum: date.getMonth(), vendite: 0, articoli: 0, ricavi: 0 };
  }
  acc[key].vendite += 1;
  acc[key].articoli += v.quantita;
  acc[key].ricavi += v.totale;
  return acc;
}, {} as Record<string, { mese: string; anno: number; meseNum: number; vendite: number; articoli: number; ricavi: number }>);

// Ordina per mese cronologicamente
const mesiOrdinati = Object.values(venditePerMese).sort((a, b) => a.mese.localeCompare(b.mese));
---

<Layout title="Dashboard">
  <div class="flex items-center justify-between mb-8">
    <h1 class="text-3xl font-bold text-slate-800">Dashboard Magazzino</h1>
    <button
      id="btn-verifica"
      class="px-4 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 transition-colors text-sm font-medium"
    >
      Verifica Inventario
    </button>
  </div>

  <!-- Modal Verifica Inventario -->
  <div id="modal-inventario" class="fixed inset-0 bg-black/50 z-50 hidden items-center justify-center">
    <div class="bg-white rounded-xl shadow-2xl max-w-2xl w-full mx-4 max-h-[80vh] flex flex-col">
      <div class="flex items-center justify-between p-6 border-b">
        <h2 class="text-xl font-semibold text-slate-800">Verifica Inventario</h2>
        <button id="btn-chiudi-modal" class="text-gray-400 hover:text-gray-600 text-2xl leading-none">&times;</button>
      </div>
      <div id="modal-body" class="p-6 overflow-y-auto flex-1">
        <div class="flex items-center justify-center py-8">
          <div class="animate-spin rounded-full h-8 w-8 border-b-2 border-indigo-600"></div>
          <span class="ml-3 text-gray-500">Controllo in corso...</span>
        </div>
      </div>
      <div id="modal-footer" class="p-4 border-t hidden">
        <button
          id="btn-correggi"
          class="w-full px-4 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700 transition-colors font-medium"
        >
          Correggi tutto
        </button>
      </div>
    </div>
  </div>

  <!-- Resoconto Finanziario -->
  <div class="grid grid-cols-1 md:grid-cols-5 gap-4 mb-8">
    <div class="bg-white rounded-xl shadow-md p-5">
      <div class="flex items-center justify-between mb-2">
        <div class="text-sm text-gray-500 uppercase tracking-wide">Spese Totali</div>
        <div class="p-2 bg-red-100 rounded-lg">
          <Receipt class="w-5 h-5 text-red-600" />
        </div>
      </div>
      <div class="text-2xl font-bold text-red-600">{formatEuro(totaleSpese)}</div>
      <div class="text-xs text-gray-400 mt-1">Investimento complessivo</div>
    </div>
    <div class="bg-white rounded-xl shadow-md p-5">
      <div class="flex items-center justify-between mb-2">
        <div class="text-sm text-gray-500 uppercase tracking-wide">Ricavi Totali</div>
        <div class="p-2 bg-green-100 rounded-lg">
          <Euro class="w-5 h-5 text-green-600" />
        </div>
      </div>
      <div class="text-2xl font-bold text-green-600">{formatEuro(totaleRicavi)}</div>
      <div class="text-xs text-gray-400 mt-1">Da vendite effettuate</div>
    </div>
    <div class={`bg-white rounded-xl shadow-md p-5 border-2 ${(totaleRicavi - totaleSpese) >= 0 ? 'border-green-200' : 'border-red-200'}`}>
      <div class="flex items-center justify-between mb-2">
        <div class="text-sm text-gray-500 uppercase tracking-wide">Bilancio</div>
        <span class="text-2xl">{(totaleRicavi - totaleSpese) >= 0 ? 'ðŸ˜„' : 'ðŸ˜¢'}</span>
      </div>
      <div class={`text-2xl font-bold ${(totaleRicavi - totaleSpese) >= 0 ? 'text-green-600' : 'text-red-600'}`}>
        {formatEuro(totaleRicavi - totaleSpese)}
      </div>
      <div class="text-xs text-gray-400 mt-1">Incassi - Spese</div>
    </div>
    <div class="bg-white rounded-xl shadow-md p-5">
      <div class="flex items-center justify-between mb-2">
        <div class="text-sm text-gray-500 uppercase tracking-wide">Valore Inventario</div>
        <div class="p-2 bg-blue-100 rounded-lg">
          <Package class="w-5 h-5 text-blue-600" />
        </div>
      </div>
      <div class="text-2xl font-bold text-blue-600">{formatEuro(valoreInventarioTotale)}</div>
      <div class="text-xs text-gray-400 mt-1">Articoli in magazzino</div>
    </div>
    <div class="bg-white rounded-xl shadow-md p-5">
      <div class="flex items-center justify-between mb-2">
        <div class="text-sm text-gray-500 uppercase tracking-wide">Articoli Venduti</div>
        <div class="p-2 bg-purple-100 rounded-lg">
          <TrendingUp class="w-5 h-5 text-purple-600" />
        </div>
      </div>
      <div class="text-2xl font-bold text-purple-600">{totaleArticoliVenduti}</div>
      <div class="text-xs text-gray-400 mt-1">Totale pezzi venduti</div>
    </div>
  </div>

  <!-- Sezioni per categoria -->
  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6 mb-8">
    <!-- Patch -->
    <div class="bg-white rounded-xl shadow-md p-6">
      <h2 class="text-xl font-semibold text-slate-700 mb-4 flex items-center gap-2">
        <div class="p-2 bg-blue-100 rounded-lg">
          <Tags class="w-5 h-5 text-blue-600" />
        </div>
        Patch
      </h2>
      <div class="space-y-3">
        <div class="flex justify-between">
          <span class="text-gray-600">In Magazzino</span>
          <span class="font-semibold">{totaleArticoliPatch}</span>
        </div>
        <div class="flex justify-between">
          <span class="text-gray-600">Venduti</span>
          <span class="font-semibold">{totaleVendutiPatch}</span>
        </div>
        <div class="flex justify-between">
          <span class="text-gray-600">Valore Inventario</span>
          <span class="font-semibold">{formatEuro(valoreInventarioPatch)}</span>
        </div>
        <div class="flex justify-between">
          <span class="text-gray-600">Ricavo Vendite</span>
          <span class="font-semibold text-green-600">{formatEuro(ricavoTotalePatch)}</span>
        </div>
        <hr class="my-2" />
        <div class="flex justify-between">
          <span class="text-gray-700 font-medium">Profitto</span>
          <span class="font-bold text-green-600">{formatEuro(profittoPatch)}</span>
        </div>
      </div>
      <a href="/patch" class="mt-4 block text-center text-blue-600 hover:text-blue-800 text-sm font-medium">
        Vedi dettagli â†’
      </a>
    </div>

    <!-- Tute -->
    <div class="bg-white rounded-xl shadow-md p-6">
      <h2 class="text-xl font-semibold text-slate-700 mb-4 flex items-center gap-2">
        <div class="p-2 bg-purple-100 rounded-lg">
          <Award class="w-5 h-5 text-purple-600" />
        </div>
        Tute
      </h2>
      <div class="space-y-3">
        <div class="flex justify-between">
          <span class="text-gray-600">In Magazzino</span>
          <span class="font-semibold">{tuteInMagazzino}</span>
        </div>
        <div class="flex justify-between">
          <span class="text-gray-600">Vendute</span>
          <span class="font-semibold">{tuteVendute}</span>
        </div>
        <div class="flex justify-between">
          <span class="text-gray-600">Valore Inventario</span>
          <span class="font-semibold">{formatEuro(valoreInventarioTute)}</span>
        </div>
        <div class="flex justify-between">
          <span class="text-gray-600">Ricavo Vendite</span>
          <span class="font-semibold text-green-600">{formatEuro(ricavoTotaleTute)}</span>
        </div>
        <hr class="my-2" />
        <div class="flex justify-between">
          <span class="text-gray-700 font-medium">Profitto</span>
          <span class="font-bold text-green-600">{formatEuro(profittoTute)}</span>
        </div>
      </div>
      <a href="/tute" class="mt-4 block text-center text-purple-600 hover:text-purple-800 text-sm font-medium">
        Vedi dettagli â†’
      </a>
    </div>

    <!-- Maglie -->
    <div class="bg-white rounded-xl shadow-md p-6">
      <h2 class="text-xl font-semibold text-slate-700 mb-4 flex items-center gap-2">
        <div class="p-2 bg-amber-100 rounded-lg">
          <Shirt class="w-5 h-5 text-amber-600" />
        </div>
        Maglie
      </h2>
      <div class="space-y-3">
        <div class="flex justify-between">
          <span class="text-gray-600">In Magazzino</span>
          <span class="font-semibold">{maglieInMagazzino}</span>
        </div>
        <div class="flex justify-between">
          <span class="text-gray-600">Vendute</span>
          <span class="font-semibold">{maglieVendute}</span>
        </div>
        <div class="flex justify-between">
          <span class="text-gray-600">Da Fare</span>
          <span class="font-semibold text-orange-600">{maglieDaFare}</span>
        </div>
        <div class="flex justify-between">
          <span class="text-gray-600">Valore Inventario</span>
          <span class="font-semibold">{formatEuro(valoreInventarioMaglie)}</span>
        </div>
      </div>
      <a href="/maglie" class="mt-4 block text-center text-amber-600 hover:text-amber-800 text-sm font-medium">
        Vedi dettagli â†’
      </a>
    </div>
  </div>

  <!-- Vendite per Mese -->
  <div class="bg-white rounded-xl shadow-md p-6 mb-8">
    <h2 class="text-xl font-semibold text-slate-700 mb-4 flex items-center gap-2">
      <div class="p-2 bg-green-100 rounded-lg">
        <CalendarDays class="w-5 h-5 text-green-600" />
      </div>
      Vendite per Mese
    </h2>
    <div class="overflow-x-auto">
      <table class="w-full text-sm">
        <thead>
          <tr class="border-b text-left text-xs font-medium text-slate-500 uppercase tracking-wider">
            <th class="px-4 py-3">Mese</th>
            <th class="px-4 py-3 text-center">Vendite</th>
            <th class="px-4 py-3 text-center">Articoli</th>
            <th class="px-4 py-3 text-right">Ricavi</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-slate-100">
          {mesiOrdinati.map((m) => (
            <tr class="hover:bg-slate-50 transition-colors">
              <td class="px-4 py-3 font-medium text-slate-800">{mesiItaliani[m.meseNum]} {m.anno}</td>
              <td class="px-4 py-3 text-center text-slate-600">{m.vendite}</td>
              <td class="px-4 py-3 text-center text-slate-600">{m.articoli}</td>
              <td class="px-4 py-3 text-right font-semibold text-green-600">{formatEuro(m.ricavi)}</td>
            </tr>
          ))}
        </tbody>
        <tfoot class="bg-slate-50 border-t-2 border-slate-200">
          <tr class="font-semibold text-slate-700">
            <td class="px-4 py-3">Totale</td>
            <td class="px-4 py-3 text-center">{venditeData.length}</td>
            <td class="px-4 py-3 text-center">{totaleArticoliVenduti}</td>
            <td class="px-4 py-3 text-right text-green-600">{formatEuro(venditeData.reduce((acc, v) => acc + v.totale, 0))}</td>
          </tr>
        </tfoot>
      </table>
    </div>
  </div>

  <!-- Ultime vendite -->
  <div class="bg-white rounded-xl shadow-md p-6">
    <h2 class="text-xl font-semibold text-slate-700 mb-4">Ultime Vendite</h2>
    <div class="overflow-x-auto">
      <table class="w-full text-sm">
        <thead>
          <tr class="border-b text-left text-gray-500">
            <th class="pb-3">Data</th>
            <th class="pb-3">Prodotto</th>
            <th class="pb-3">Qta</th>
            <th class="pb-3">Totale</th>
            <th class="pb-3">Piattaforma</th>
          </tr>
        </thead>
        <tbody>
          {venditeData.slice(0, 5).map((v) => (
            <tr class="border-b last:border-0">
              <td class="py-3">{v.data}</td>
              <td class="py-3">{v.prodotto}</td>
              <td class="py-3">{v.quantita}</td>
              <td class="py-3 font-medium text-green-600">{formatEuro(v.totale)}</td>
              <td class="py-3">
                <span class={`px-2 py-1 rounded text-xs font-medium ${v.piattaforma === 'Vinted' ? 'bg-teal-100 text-teal-800' : 'bg-yellow-100 text-yellow-800'}`}>
                  {v.piattaforma}
                </span>
              </td>
            </tr>
          ))}
        </tbody>
      </table>
    </div>
    <a href="/vendite" class="mt-4 block text-center text-blue-600 hover:text-blue-800 text-sm font-medium">
      Vedi tutte le vendite â†’
    </a>
  </div>

  <script>
    const btnVerifica = document.getElementById('btn-verifica')!;
    const modal = document.getElementById('modal-inventario')!;
    const modalBody = document.getElementById('modal-body')!;
    const modalFooter = document.getElementById('modal-footer')!;
    const btnChiudi = document.getElementById('btn-chiudi-modal')!;
    const btnCorreggi = document.getElementById('btn-correggi')!;

    const fieldLabels: Record<string, string> = {
      venduti: 'Venduti',
      in_magazzino: 'In magazzino',
      ricavo_vendite: 'Ricavo vendite',
      profitto: 'Profitto',
    };

    function formatVal(campo: string, val: number) {
      if (campo === 'ricavo_vendite' || campo === 'profitto') {
        return val.toFixed(2).replace('.', ',') + ' EUR';
      }
      return String(val);
    }

    function openModal() {
      modal.classList.remove('hidden');
      modal.classList.add('flex');
    }

    function closeModal() {
      modal.classList.add('hidden');
      modal.classList.remove('flex');
    }

    function showLoading(msg: string) {
      modalBody.innerHTML = `
        <div class="flex items-center justify-center py-8">
          <div class="animate-spin rounded-full h-8 w-8 border-b-2 border-indigo-600"></div>
          <span class="ml-3 text-gray-500">${msg}</span>
        </div>`;
      modalFooter.classList.add('hidden');
    }

    function renderDiscrepancies(discrepancies: any[]) {
      if (discrepancies.length === 0) {
        modalBody.innerHTML = `
          <div class="text-center py-8">
            <div class="text-4xl mb-3">&#10004;</div>
            <p class="text-green-600 font-semibold text-lg">Tutto ok!</p>
            <p class="text-gray-500 mt-1">Nessuna discrepanza trovata nell'inventario.</p>
          </div>`;
        modalFooter.classList.add('hidden');
        return;
      }

      let html = `<p class="text-sm text-gray-500 mb-4">Trovate <strong>${discrepancies.length}</strong> patch con discrepanze:</p>`;
      html += '<div class="space-y-4">';

      for (const d of discrepancies) {
        const nome = d.lotto ? `${d.prodotto} [${d.lotto}]` : d.prodotto;
        html += `<div class="border rounded-lg p-4">`;
        html += `<div class="font-semibold text-slate-800 mb-2">${nome}</div>`;
        html += '<div class="space-y-1">';
        for (const c of d.campi) {
          html += `<div class="flex justify-between text-sm">
            <span class="text-gray-600">${fieldLabels[c.campo] || c.campo}</span>
            <span><span class="text-red-500 line-through">${formatVal(c.campo, c.attuale)}</span> &rarr; <span class="text-green-600 font-medium">${formatVal(c.campo, c.atteso)}</span></span>
          </div>`;
        }
        html += '</div></div>';
      }
      html += '</div>';

      modalBody.innerHTML = html;
      modalFooter.classList.remove('hidden');
    }

    function renderCorrections(corrections: any[]) {
      if (corrections.length === 0) {
        modalBody.innerHTML = `
          <div class="text-center py-8">
            <div class="text-4xl mb-3">&#10004;</div>
            <p class="text-green-600 font-semibold text-lg">Nessuna correzione necessaria.</p>
          </div>`;
        modalFooter.classList.add('hidden');
        return;
      }

      let html = `<div class="bg-green-50 border border-green-200 rounded-lg p-3 mb-4">
        <p class="text-green-800 font-medium">Corrette ${corrections.length} patch.</p>
      </div>`;
      html += '<div class="space-y-4">';

      for (const c of corrections) {
        const nome = c.lotto ? `${c.prodotto} [${c.lotto}]` : c.prodotto;
        html += `<div class="border rounded-lg p-4">`;
        html += `<div class="font-semibold text-slate-800 mb-2">${nome}</div>`;
        html += '<div class="space-y-1">';
        for (const [campo, vals] of Object.entries(c.corretto) as [string, any][]) {
          if (vals.da !== vals.a) {
            html += `<div class="flex justify-between text-sm">
              <span class="text-gray-600">${fieldLabels[campo] || campo}</span>
              <span><span class="text-red-500 line-through">${formatVal(campo, vals.da)}</span> &rarr; <span class="text-green-600 font-medium">${formatVal(campo, vals.a)}</span></span>
            </div>`;
          }
        }
        html += '</div></div>';
      }
      html += '</div>';

      modalBody.innerHTML = html;
      modalFooter.classList.add('hidden');
    }

    btnVerifica.addEventListener('click', async () => {
      openModal();
      showLoading('Controllo in corso...');
      try {
        const res = await fetch('/api/check-inventory');
        const data = await res.json();
        if (data.error) throw new Error(data.error);
        renderDiscrepancies(data.discrepancies);
      } catch (e: any) {
        modalBody.innerHTML = `<p class="text-red-600 py-4">Errore: ${e.message}</p>`;
      }
    });

    btnCorreggi.addEventListener('click', async () => {
      showLoading('Correzione in corso...');
      try {
        const res = await fetch('/api/check-inventory', { method: 'POST' });
        const data = await res.json();
        if (data.error) throw new Error(data.error);
        renderCorrections(data.corrections);
      } catch (e: any) {
        modalBody.innerHTML = `<p class="text-red-600 py-4">Errore: ${e.message}</p>`;
      }
    });

    btnChiudi.addEventListener('click', closeModal);
    modal.addEventListener('click', (e) => {
      if (e.target === modal) closeModal();
    });
  </script>
</Layout>
