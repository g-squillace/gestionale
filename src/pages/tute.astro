---
import Layout from '../layouts/Layout.astro';
import data from '../data/magazzino.json';
import { Award, Package, ShoppingBag, Euro, TrendingUp, Calendar, MapPin } from 'lucide-astro';

const { tute } = data;
const formatEuro = (n: number) => n.toFixed(2).replace('.', ',') + ' EUR';

const getStatoBadge = (stato: string) => {
  switch (stato) {
    case 'Venduto':
      return 'bg-green-100 text-green-800';
    case 'In magazzino':
      return 'bg-blue-100 text-blue-800';
    default:
      return 'bg-gray-100 text-gray-800';
  }
};

// Calcola totali
const inMagazzino = tute.filter(t => t.stato === 'In magazzino');
const vendute = tute.filter(t => t.stato === 'Venduto');
---

<Layout title="Tute">
  <div class="flex justify-between items-center mb-8">
    <h1 class="text-3xl font-bold text-slate-800 flex items-center gap-3">
      <div class="p-3 bg-purple-100 rounded-xl">
        <Award class="w-8 h-8 text-purple-600" />
      </div>
      Inventario Tute
    </h1>
    <div class="flex gap-4">
      <div class="bg-blue-100 text-blue-800 px-4 py-2 rounded-lg flex items-center gap-2">
        <Package class="w-4 h-4" />
        <span class="text-sm">In Magazzino:</span>
        <span class="font-bold">{inMagazzino.length}</span>
      </div>
      <div class="bg-green-100 text-green-800 px-4 py-2 rounded-lg flex items-center gap-2">
        <ShoppingBag class="w-4 h-4" />
        <span class="text-sm">Vendute:</span>
        <span class="font-bold">{vendute.length}</span>
      </div>
    </div>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    {tute.map((t) => (
      <div class="bg-white rounded-xl shadow-md overflow-hidden">
        <div class={`px-6 py-4 ${t.stato === 'Venduto' ? 'bg-gradient-to-r from-green-500 to-green-600' : 'bg-gradient-to-r from-purple-500 to-purple-600'}`}>
          <div class="flex items-center gap-4">
            {t.immagine ? (
              <img src={t.immagine} alt={t.squadra} class="w-16 h-16 object-cover rounded-lg border-2 border-white/30" />
            ) : (
              <div class="w-16 h-16 bg-white/20 rounded-lg flex items-center justify-center">
                <Award class="w-8 h-8 text-white/70" />
              </div>
            )}
            <div class="flex-1">
              <div class="flex justify-between items-center">
                <h2 class="text-xl font-semibold text-white">{t.squadra}</h2>
                <span class={`px-3 py-1 rounded-full text-xs font-medium ${getStatoBadge(t.stato)}`}>
                  {t.stato}
                </span>
              </div>
              <p class="text-white/80 text-sm mt-1">{t.tipo} - {t.categoria}</p>
            </div>
          </div>
        </div>
        <div class="p-6">
          <div class="grid grid-cols-2 gap-4 mb-4">
            <div>
              <div class="text-sm text-gray-500">Stagione</div>
              <div class="text-lg font-medium">{t.stagione || 'N/D'}</div>
            </div>
            <div>
              <div class="text-sm text-gray-500">Costo</div>
              <div class="text-lg font-medium">{formatEuro(t.costo)}</div>
            </div>
          </div>

          {t.descrizione && (
            <div class="mb-4">
              <div class="text-sm text-gray-500">Descrizione</div>
              <p class="text-gray-700">{t.descrizione}</p>
            </div>
          )}

          <hr class="my-4" />

          <div class="flex justify-between items-center">
            <div>
              <div class="text-sm text-gray-500">Prezzo Vendita</div>
              <div class="text-lg font-semibold">
                {t.prezzoVendita > 0 ? (
                  <span class="text-green-600">{formatEuro(t.prezzoVendita)}</span>
                ) : (
                  <span class="text-gray-400">Da definire</span>
                )}
              </div>
            </div>
            {t.stato === 'Venduto' && (
              <div class="text-right">
                <div class="text-sm text-gray-500">Profitto</div>
                <div class={`text-xl font-bold ${t.profitto >= 0 ? 'text-green-600' : 'text-red-600'}`}>
                  {formatEuro(t.profitto)}
                </div>
              </div>
            )}
          </div>
        </div>
      </div>
    ))}
  </div>

  <!-- Riepilogo -->
  <div class="mt-8 bg-white rounded-xl shadow-md p-6">
    <h2 class="text-xl font-semibold text-slate-700 mb-4">Riepilogo</h2>
    <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
      <div class="text-center p-4 bg-purple-50 rounded-lg">
        <div class="text-sm text-purple-600">Totale Articoli</div>
        <div class="text-2xl font-bold text-purple-700">{tute.length}</div>
      </div>
      <div class="text-center p-4 bg-blue-50 rounded-lg">
        <div class="text-sm text-blue-600">Valore In Magazzino</div>
        <div class="text-2xl font-bold text-blue-700">
          {formatEuro(inMagazzino.reduce((acc, t) => acc + t.costo, 0))}
        </div>
      </div>
      <div class="text-center p-4 bg-green-50 rounded-lg">
        <div class="text-sm text-green-600">Ricavo Vendite</div>
        <div class="text-2xl font-bold text-green-700">
          {formatEuro(vendute.reduce((acc, t) => acc + t.prezzoVendita, 0))}
        </div>
      </div>
      <div class="text-center p-4 bg-emerald-50 rounded-lg">
        <div class="text-sm text-emerald-600">Profitto Totale</div>
        <div class="text-2xl font-bold text-emerald-700">
          {formatEuro(vendute.reduce((acc, t) => acc + t.profitto, 0))}
        </div>
      </div>
    </div>
  </div>
</Layout>
