---
import Layout from '../layouts/Layout.astro';
import { supabase } from '../lib/supabase';
import { MessageSquare, Clock, Euro, ExternalLink } from 'lucide-astro';

const { data: richieste } = await supabase.from('richieste').select('*').order('data_richiesta', { ascending: false });
const richiesteData = richieste || [];

const formatEuro = (n: number) => n.toFixed(2).replace('.', ',') + 'â‚¬';

const totaleBudget = richiesteData.reduce((acc, r) => acc + r.budget, 0);
const inAttesa = richiesteData.filter(r => r.stato === 'In attesa').length;

const getStatoBadge = (stato: string) => {
  switch (stato) {
    case 'In attesa': return 'bg-amber-100 text-amber-700';
    case 'Completata': return 'bg-green-100 text-green-700';
    case 'Annullata': return 'bg-red-100 text-red-700';
    default: return 'bg-gray-100 text-gray-700';
  }
};

const getCategoriaColor = (cat: string) => {
  switch (cat) {
    case 'Patch': return 'bg-blue-100 text-blue-700';
    case 'Maglia': return 'bg-amber-100 text-amber-700';
    case 'Tuta': return 'bg-purple-100 text-purple-700';
    default: return 'bg-gray-100 text-gray-700';
  }
};
---

<Layout title="Richieste">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold text-slate-800 flex items-center gap-2">
      <MessageSquare class="w-6 h-6 text-orange-600" />
      Richieste Clienti
    </h1>
    <div class="flex gap-3 text-sm">
      <div class="bg-amber-50 text-amber-700 px-3 py-1.5 rounded-lg flex items-center gap-2">
        <Clock class="w-4 h-4" />
        <span class="font-semibold">{inAttesa}</span>
      </div>
      <div class="bg-green-50 text-green-700 px-3 py-1.5 rounded-lg flex items-center gap-2">
        <Euro class="w-4 h-4" />
        <span class="font-semibold">{formatEuro(totaleBudget)}</span>
      </div>
    </div>
  </div>

  <div class="bg-white rounded-xl shadow-sm overflow-hidden">
    <table class="w-full">
      <thead class="bg-slate-50 border-b border-slate-200">
        <tr class="text-left text-xs font-medium text-slate-500 uppercase tracking-wider">
          <th class="px-4 py-3">Data</th>
          <th class="px-4 py-3">Cliente</th>
          <th class="px-4 py-3">Categoria</th>
          <th class="px-4 py-3">Descrizione</th>
          <th class="px-4 py-3 text-right">Budget</th>
          <th class="px-4 py-3 text-center">Stato</th>
          <th class="px-4 py-3 text-center">Link</th>
        </tr>
      </thead>
      <tbody class="divide-y divide-slate-100">
        {richiesteData.map((r) => (
          <tr class="hover:bg-slate-50 transition-colors">
            <td class="px-4 py-3 text-slate-600 text-sm">{r.data_richiesta}</td>
            <td class="px-4 py-3 font-medium text-slate-800">{r.cliente || '-'}</td>
            <td class="px-4 py-3">
              <span class={`px-2 py-1 rounded text-xs font-medium ${getCategoriaColor(r.categoria)}`}>
                {r.categoria}
              </span>
            </td>
            <td class="px-4 py-3 text-slate-700">{r.descrizione}</td>
            <td class="px-4 py-3 text-right">
              {r.budget > 0 ? (
                <span class="font-semibold text-green-600">{formatEuro(r.budget)}</span>
              ) : (
                <span class="text-gray-400">-</span>
              )}
            </td>
            <td class="px-4 py-3 text-center">
              <span class={`px-2 py-1 rounded-full text-xs font-medium ${getStatoBadge(r.stato)}`}>
                {r.stato}
              </span>
            </td>
            <td class="px-4 py-3 text-center">
              {r.url ? (
                <a href={r.url} target="_blank" rel="noopener noreferrer" class="text-teal-600 hover:text-teal-800">
                  <ExternalLink class="w-4 h-4 inline" />
                </a>
              ) : (
                <span class="text-gray-300">-</span>
              )}
            </td>
          </tr>
        ))}
      </tbody>
      <tfoot class="bg-slate-50 border-t-2 border-slate-200">
        <tr class="font-semibold text-slate-700">
          <td class="px-4 py-3" colspan="4">Totale ({richiesteData.length} richieste)</td>
          <td class="px-4 py-3 text-right text-green-600">{formatEuro(totaleBudget)}</td>
          <td class="px-4 py-3" colspan="2"></td>
        </tr>
      </tfoot>
    </table>
  </div>
</Layout>
