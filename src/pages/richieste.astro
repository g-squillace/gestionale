---
import Layout from '../layouts/Layout.astro';
import data from '../data/magazzino.json';
import { MessageSquare, Clock, Euro, User, ExternalLink, AlertCircle, Users } from 'lucide-astro';

const { richieste } = data;
const formatEuro = (n: number) => n.toFixed(2).replace('.', ',') + ' EUR';

// Ordina per data (piu recente prima)
const richiesteOrdinate = [...richieste].sort((a, b) => new Date(b.dataRichiesta).getTime() - new Date(a.dataRichiesta).getTime());

// Statistiche
const totaleBudget = richieste.reduce((acc, r) => acc + r.budget, 0);
const perCliente = richieste.reduce((acc, r) => {
  if (r.cliente) {
    acc[r.cliente] = (acc[r.cliente] || 0) + 1;
  }
  return acc;
}, {} as Record<string, number>);
---

<Layout title="Richieste Clienti">
  <h1 class="text-3xl font-bold text-slate-800 mb-8 flex items-center gap-3">
    <div class="p-3 bg-orange-100 rounded-xl">
      <MessageSquare class="w-8 h-8 text-orange-600" />
    </div>
    Richieste Clienti
  </h1>

  <!-- Stats -->
  <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
    <div class="bg-white rounded-xl shadow-md p-6">
      <div class="flex items-center justify-between mb-2">
        <div class="text-sm text-gray-500 uppercase tracking-wide">Richieste Totali</div>
        <div class="p-2 bg-orange-100 rounded-lg">
          <MessageSquare class="w-5 h-5 text-orange-600" />
        </div>
      </div>
      <div class="text-3xl font-bold text-orange-600">{richieste.length}</div>
    </div>
    <div class="bg-white rounded-xl shadow-md p-6">
      <div class="flex items-center justify-between mb-2">
        <div class="text-sm text-gray-500 uppercase tracking-wide">In Attesa</div>
        <div class="p-2 bg-amber-100 rounded-lg">
          <Clock class="w-5 h-5 text-amber-600" />
        </div>
      </div>
      <div class="text-3xl font-bold text-amber-600">
        {richieste.filter(r => r.stato === 'In attesa').length}
      </div>
    </div>
    <div class="bg-white rounded-xl shadow-md p-6">
      <div class="flex items-center justify-between mb-2">
        <div class="text-sm text-gray-500 uppercase tracking-wide">Budget Totale</div>
        <div class="p-2 bg-green-100 rounded-lg">
          <Euro class="w-5 h-5 text-green-600" />
        </div>
      </div>
      <div class="text-3xl font-bold text-green-600">{formatEuro(totaleBudget)}</div>
    </div>
  </div>

  <!-- Lista richieste -->
  <div class="space-y-4">
    {richiesteOrdinate.map((r) => (
      <div class="bg-white rounded-xl shadow-md overflow-hidden">
        <div class="flex flex-col md:flex-row">
          <div class="flex-1 p-6">
            <div class="flex flex-wrap items-center gap-3 mb-3">
              <span class="px-3 py-1 bg-amber-100 text-amber-800 rounded-full text-xs font-medium">
                {r.stato}
              </span>
              <span class="px-3 py-1 bg-blue-100 text-blue-800 rounded-full text-xs font-medium">
                {r.categoria}
              </span>
              <span class="text-sm text-gray-500">{r.dataRichiesta}</span>
            </div>

            <h3 class="text-lg font-semibold text-slate-800 mb-2">{r.descrizione}</h3>

            <div class="flex flex-wrap gap-4 text-sm text-gray-600">
              {r.cliente && (
                <div class="flex items-center gap-1">
                  <User class="w-4 h-4" />
                  <span>{r.cliente}</span>
                </div>
              )}
              {r.url && (
                <a href={r.url} target="_blank" rel="noopener noreferrer" class="flex items-center gap-1 text-teal-600 hover:text-teal-800">
                  <ExternalLink class="w-4 h-4" />
                  <span>Vinted</span>
                </a>
              )}
            </div>
          </div>

          <div class="bg-slate-50 p-6 flex flex-col justify-center items-center md:w-40">
            <div class="text-sm text-gray-500">Budget</div>
            <div class={`text-2xl font-bold ${r.budget > 0 ? 'text-green-600' : 'text-gray-400'}`}>
              {r.budget > 0 ? formatEuro(r.budget) : 'N/D'}
            </div>
          </div>
        </div>
      </div>
    ))}
  </div>

  <!-- Riepilogo clienti -->
  {Object.keys(perCliente).length > 0 && (
    <div class="mt-8 bg-white rounded-xl shadow-md p-6">
      <h2 class="text-lg font-semibold text-slate-700 mb-4 flex items-center gap-2">
        <Users class="w-5 h-5 text-orange-500" />
        Richieste per Cliente
      </h2>
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
        {Object.entries(perCliente).map(([cliente, count]) => (
          <div class="text-center p-4 bg-gray-50 rounded-lg">
            <div class="font-medium text-slate-800">{cliente}</div>
            <div class="text-2xl font-bold text-orange-600">{count}</div>
            <div class="text-xs text-gray-500">richieste</div>
          </div>
        ))}
      </div>
    </div>
  )}

  <!-- Nota -->
  <div class="mt-8 bg-amber-50 border border-amber-200 rounded-xl p-4">
    <div class="flex gap-3">
      <AlertCircle class="w-5 h-5 text-amber-600 flex-shrink-0 mt-0.5" />
      <div>
        <h4 class="font-medium text-amber-800">Richieste in attesa</h4>
        <p class="text-sm text-amber-700">Queste sono le richieste dei clienti che devono ancora essere evase. Controlla la disponibilita dei prodotti e contatta i clienti.</p>
      </div>
    </div>
  </div>
</Layout>
